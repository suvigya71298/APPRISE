<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:background="#85E4DBDB"
    android:layout_gravity="center"
    android:layout_height="match_parent"
    tools:context=".DashBoard"
    >




    <android.support.v7.widget.Toolbar
        android:layout_width="match_parent"
        android:id="@+id/include"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="@+id/gridLayout"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:background="@drawable/background_white"

        android:contentInsetStart="0dp"
        android:contentInsetLeft="0dp"
        android:contentInsetRight="0dp"
        android:contentInsetEnd="0dp"
        app:contentInsetLeft="0dp"
        app:contentInsetStart="0dp"
        app:contentInsetRight="0dp"
        app:contentInsetEnd="0dp">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:padding="5dp"
            android:layout_marginStart="?android:attr/actionBarSize"


            android:src="@drawable/apprise_toolbar"

            />

    </android.support.v7.widget.Toolbar>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center">
        <LinearLayout
            android:id="@+id/gridLayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:columnCount="2"
            android:columnOrderPreserved="false"
            android:gravity="center"
            android:orientation="vertical"
            android:rowCount="3"
            android:padding="10dp"
            android:layout_marginBottom="50dp"
            >


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"

                >

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:orientation="vertical"
                    >

                    <ImageView
                        android:id="@+id/reconciliation"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:onClick="Redirect"
                        android:src="@drawable/reconciliation"
                        />

                </LinearLayout>





                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal|center_vertical"
                    android:layout_marginStart="15dp"
                    android:gravity="center"
                    android:orientation="vertical"
                    >

                    <ImageView
                        android:id="@+id/dailyreport"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:onClick="Redirect"
                        android:src="@drawable/cuttopack" />




                </LinearLayout>



            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_marginTop="18dp"


                >



                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center"

                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/cutting"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:onClick="Redirect"
                        android:src="@drawable/cutting"

                        />



                </LinearLayout>




                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal|center_vertical"
                    android:layout_marginStart="16dp"

                    android:gravity="center"
                    android:orientation="vertical"
                    >

                    <ImageView
                        android:id="@+id/sewing"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:onClick="Redirect"
                        android:src="@drawable/sweing"
                        />




                </LinearLayout>





            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_marginTop="18dp"

                >






                    <ImageView
                        android:id="@+id/finishing"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:onClick="Redirect"
                        android:src="@drawable/finish" />









                    <ImageView
                        android:id="@+id/packing"
                        android:layout_marginStart="16dp"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:onClick="Redirect"

                        android:src="@drawable/packing" />







            </LinearLayout>

        </LinearLayout>
    </LinearLayout>
</LinearLayout>
